{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ujwalgurung1/ujwalgurung1.github.io/main/data/Week8.csv",
        "format": {"type": "csv"}
      },
    "width": 500,
    "height": 280,
  
     "title": {
      "text": "UK wage growth and inflation are converging",
      "subtitle":"Annual % change. Source: ONS",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
    
    "layer": [
      {
        "encoding": {
          "x": {"field": "date", "type": "temporal"},
          "y": {"field": "unit", "type": "quantitative"},
          "color": {"field": "indicator", "type": "nominal"}
        },
        "layer": [
          {"mark": "line"},
          {
            "params": [{
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "mouseover"
              }
            }],
            "mark": "point",
            "encoding": {
              "opacity": {
                "condition": {
                  "param": "label",
                  "empty": false,
                  "value": 1
                },
                "value": 0
              }
            }
          }
        ]
      },
      {
        "transform": [{"filter": {"param": "label", "empty": false}}],
        "layer": [
          {
            "mark": {"type": "rule", "color": "gray"},
            "encoding": {
              "x": {"type": "temporal", "field": "date", "aggregate": "min"}
            }
          },
          {
            "encoding": {
              "text": {"type": "quantitative", "field": "unit"},
              "x": {
                "type": "temporal",
                "field": "date", 
                "axis": {
                  "title": null,
                  "grid": false,
                  "labelSeparation": 20,
                  "ticks": true
                  }
                  },
              "y": {
                "type": "quantitative", 
                "field": "unit",
                "title": "",
                "axis": {"grid": true}
                }
            },
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "stroke": "white",
                  "strokeWidth": 2,
                  "align": "left",
                  "dx": 5,
                  "dy": -5
                }
              },
              {
                "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
                "encoding": {
                  "color": {"type": "nominal", "field": "indicator"}
                }
              }
            ]
          }
        ]
      }
    ]
  }
  