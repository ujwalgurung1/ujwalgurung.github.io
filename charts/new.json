{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
          "url": "https://raw.githubusercontent.com/ujwalgurung1/ujwalgurung1.github.io/main/data/Week8.csv",
          "format": {"type": "csv"}
        },
    "width": 400,
    "height": 300,
    "encoding": {"x": {"field": "date", "type": "temporal"}},
    "layer": [
      {
        "encoding": {
          "color": {"field": "indicator", "type": "nominal"},
          "y": {"field": "unit", "type": "quantitative"}
        },
        "layer": [
          {"mark": "line"},
          {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
        ]
      },
      {
        "transform": [{"pivot": "indicator", "value": "unit", "groupby": ["date"]}],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field": "cpi", "type": "quantitative"},
            {"field": "wage", "type": "quantitative"}
          ]
        },
        "params": [{
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["date"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }]
      }
    ]
  }
  